name: {{name}}

conda:
  install_command: "mamba"
  channels:
    - conda-forge
    - r
  deps:
    - r-base==4.1.2
    - r-essentials
    - r-devtools

R:
  # dependents for CRAN packages
  cran:
    mirror: https://mirrors.tuna.tsinghua.edu.cn/CRAN/
    deps:
      - BiocManager
      - optparse
  
  # dependents for Bioconductor packages
  bioconductor:
    deps:
      - GenomicRanges

  # dependents for GitHub packages
  github:
    deps:
      - hadley/devtools
